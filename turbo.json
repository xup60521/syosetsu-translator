{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream-with-experimental-timestamps",
    "globalDependencies": ["bun.lockb", "tsconfig.json"],
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "build": {
            "env": [
                "GOOGLE_CLIENT_SECRET",
                "BETTER_AUTH_BASE_URL",
                "VERCEL_URL",
                "WORKFLOW_URL",
                "BETTER_AUTH_SECRET",
                "ENCRYPTION_KEY",
                "DATABASE_URL",
                "QSTASH_URL",
                "QSTASH_TOKEN",
                "QSTASH_CURRENT_SIGNING_KEY",
                "QSTASH_NEXT_SIGNING_KEY",
                "UPSTASH_REDIS_REST_URL",
                "UPSTASH_REDIS_REST_TOKEN",
                "VITE_GOOGLE_CLIENT_ID",
                "VITE_GOOGLE_APP_ID"
            ],
            "dependsOn": ["^build"],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                ".output/**",
                ".wrangler/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "preview": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "dev:qstash": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["^test"],
            "outputs": []
        },
        "clean": {
            "cache": false
        }
    }
}
